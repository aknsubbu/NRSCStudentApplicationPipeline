# API authentication
API_KEY='your-secret-api-key-123'  # Shared API key for all microservices

# MinIO configuration
BUCKET_NAME='applicationdocs'      # Bucket name for storing student application documents
MINIO_ENDPOINT='localhost:9000'    # MinIO server endpoint
MINIO_ACCESS_KEY='minioadmin'      # MinIO access key
MINIO_SECRET_KEY='minioadmin123'   # MinIO secret key
MINIO_SECURE='false'              # Use HTTPS for MinIO (true/false)
MINIO_SERVER_URL='http://localhost:8000'  # URL of the DB server that interfaces with MinIO

# Email server configuration for outgoing emails
EMAIL_SENDER='noreply@example.com'  # Email address used for sending emails
EMAIL_PASSWORD='your-email-password' # Password or app password for the email account
SMTP_HOST='smtp.gmail.com'         # SMTP server address
SMTP_PORT='587'                    # SMTP server port

# Email polling configuration for incoming emails
IMAP_SERVER='imap.gmail.com'       # IMAP server address for incoming email polling
EMAIL_USERNAME='applications@example.com'  # Email address to monitor for applications
EMAIL_PASSWORD='your-email-app-password'   # App password for the email account (use Gmail App Password)
EMAIL_FOLDER='INBOX'               # Email folder to monitor for new applications
PROCESSED_FOLDER='Processed'       # Folder to move processed application emails
APP_KEYWORDS='application,apply,job,position,vacancy,hiring,interview,offer,candidate'  # Keywords to identify application emails
MAX_EMAILS='50'                    # Maximum number of emails to process at once
MARK_AS_READ='false'               # Mark emails as read after processing (true/false)
MOVE_PROCESSED='true'              # Move processed application emails to processed folder (true/false)
ATTACHMENT_DIR='attachments'       # Directory to save email attachments
IMAP_TIMEOUT='30'                  # IMAP connection timeout in seconds
INCLUDE_RAW_EMAIL='false'          # Include complete raw email in base64 format in JSON output (true/false)

# Server URLs
DB_SERVER_URL='http://localhost:8000'     # URL of the DB server
EMAIL_SERVER_URL='http://localhost:8001'  # URL of the email server
EMAIL_POLLER_URL='http://localhost:8002'  # URL of the email polling server

# AI configuration
GEMINI_API_KEY='your-gemini-api-key'     # API key for Gemini AI API